datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Session {
  id        Int      @id @default(autoincrement())
  name String
  createdAt DateTime @default(now())
}

model User {
  id        Int      @id @default(autoincrement())
  mobile String @unique
  username String @unique
  password String
  nickname String
  avatar String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}