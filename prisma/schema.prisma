datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  phone     String   @unique
  username  String   @unique
  password  String
  nickname  String
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Task {
  id          Int       @id @default(autoincrement())
  userId      Int
  title       String
  pond        Int       @default(1)
  description String?
  importance  Int?      @default(0)
  urgency     Int?      @default(0)
  startDate   DateTime?
  endDate     DateTime?
  // sort        Int
}
